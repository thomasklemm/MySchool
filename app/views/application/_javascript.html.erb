<%= javascript_include_tag :application %>

<%# FullCalendar %>
<%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/fullcalendar/1.6.4/fullcalendar.min.js' %>
<%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/fullcalendar/1.6.4/gcal.js' %>
<%= stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/fullcalendar/1.6.4/fullcalendar.css' %>
<%= stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/fullcalendar/1.6.4/fullcalendar.print.css' %>

<%= yield :javascript %>

<% if Rails.env.test? %>
  <%= javascript_tag do %>
    $.ajaxSetup({ async: false });
  <% end %>
<% end %>

<%= javascript_tag do %>
  $('input[type=text].date').datepicker({
    language: "de",
    calendarWeeks: true,
    todayBtn: "linked"
  });
<% end %>
